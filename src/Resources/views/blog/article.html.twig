{% extends 'layout.html.twig' %}

{% import 'block/date.html.twig' as date %}

{% block body_class 'blog' %}

{% block content %}
    <hr class="icon-pen">

    <article class="post">
        <header class="header">
            {{ date.ago(article.date) }}
            <h1 class="title">
                {{ article.title }}
            </h1>
        </header>
        <div class="content">
            {{ article.content|raw }}
        </div>
        <footer>

        </footer>
    </article>
{% endblock %}

{% block footer %}
    <h1>THANK YOU FOR READING!</h1>

    {% embed 'blog/footer.html.twig' %}
        {% block more %}
            <div class="articles">
                <h2>
                    <a href="{{ path('blog') }}">
                        More tech' articles from me
                    </a>
                </h2>
                <ul class="last-post">
                    {% for article in articles %}
                        <li>
                            {{ include('content/article/link.html.twig') }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
