{% import 'block/date.html.twig' as date %}

{% set url = path('article', {'article': article.slug}) %}

{% block preview %}
<article class="article preview">
    <header class="header">
        {{ date.ago(article.date) }}
        <h1 class="title">
            <a href="{{ path('article', {article: article.slug}) }}">
                {{ article.title }}
            </a>
        </h1>
    </header>
    <div class="content">
        <p class="description">{{ article.description }}</p>
    </div>
</article>
{% endblock %}
